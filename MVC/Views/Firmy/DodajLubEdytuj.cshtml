            @Html.LabelFor(model => model.StronaWWW)
            @Html.EditorFor(model => model.StronaWWW)
            @Html.ValidationMessageFor(model => model.StronaWWW)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.NrKonta)
            @Html.EditorFor(model => model.NrKonta)
            @Html.ValidationMessageFor(model => model.NrKonta)
        </div>
        <div class="form-group">
            <input type="submit" value="Zapisz" class="btn button" />
            <input type="reset" value="Resetuj" class="btn button" />
        </div>
    }
