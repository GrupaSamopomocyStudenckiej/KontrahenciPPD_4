@model IEnumerable<MVC.Models.PracownicyModel>
@{
    ViewBag.Title = "Pracownicy firmy";
}

<table class="center">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.NrTelefonu)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Email)
            </th>
        </tr>
    </thead>


    @foreach (var item in Model)
    {
        <tr>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.NrTelefonu)
            </td>
            <td class="text-center">
                @Html.DisplayFor(modelItem => item.Email)
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["Sukces"]'
            if (successMessage != '')
                alertify.success(successMessage);
        });

        function Usun(id) {
            alertify.confirm('Usuwanie','Czy na pewno chcesz usunąć tego pracownika?',function(){
                window.location.href  = '@Url.Action("Usun", "Pracownicy")/'+id;
            },null );
        }
    </script>
}

<style>

    .center {
        margin-top: 20px;
    }

    /*
    Generic Styling, for Desktops/Laptops
    */
    table {
        width: 100%;
        border-collapse: collapse;
    }
    /* Zebra striping */
    tr:nth-of-type(even) {
        background: #eee;
    }

    th {
        background: #333;
        color: white;
        font-weight: bold;
    }

    td, th {
        padding: 6px;
        border: 1px solid #ccc;
        text-align: left;
    }

    /*
    Max width before this PARTICULAR table gets nasty
    This query will take effect for any screen smaller than 760px
    and also iPads specifically.
    */
    @@media only screen and (max-width: 1200px), (min-device-width: 768px) and (max-device-width: 1024px) {
        /* Force table to not be like tables anymore */
        table, thead, tbody, th, td, tr {
            display: block;
        }
            /* Hide table headers (but not display: none;, for accessibility) */
            thead tr {
                position: absolute;
                top: -9999px;
                left: -9999px;
            }

        tr {
            border: 1px solid #ccc;
            margin: 0 0 10px 0;
        }

        td {
            /* Behave  like a "row" */
            border: none;
            border-bottom: 1px solid #ccc;
            position: relative;
            padding-left: 50%;
        }

        tr:nth-child(even) {
            border: 1px solid #ccc;
        }


        td:before {
            /* Now like a table header */
            position: absolute;
            /* Top/left values mimic padding */
            top: 6px;
            left: 6px;
            width: 45%;
            padding-right: 10px;
            white-space: nowrap;
        }
        /*
            Label the data
            */
        td:nth-of-type(1):before {
            content: "Imie";
        }

        td:nth-of-type(2):before {
            content: "Nazwisko";
        }

        td:nth-of-type(3):before {
            content: "Nr telefonu";
        }

        td:nth-of-type(4):before {
            content: "Email";
        }

        td:nth-of-type(5):before {
            content: "Opcje";
            margin-top: 10px;
        }
    }
</style>